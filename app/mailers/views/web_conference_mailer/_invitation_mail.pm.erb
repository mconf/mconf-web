<%= t('.message.header', :sender => invitation.from.full_name, :email_sender => invitation.from.email).html_safe %>

<% title = nil %>
<% unless invitation.title.blank? %>
  <% title = invitation.title %>
<% end %>
<% unless invitation.description.blank? %>
  <% if title.nil? %>
    <% title = invitation.description %>
  <% else %>
    <% title = title + ': ' + invitation.description %>
  <% end %>
<% end %>
<%= title %>

<% unless invitation.starts_on.nil? %>
  <%= t('.message.start') + ': ' + invitation.starts_on.to_formatted_s(:rfc822) %>
<% end %>

<% unless invitation.ends_on.nil? %>
  <%= t('.message.end') + ': ' + invitation.ends_on.to_formatted_s(:rfc822) %>
<% end %>

<%= t('.message.join') + ': ' + invitation.url %>

<% if invitation.room.private %>
  <%= t('.message.password') + ': ' + invitation.room.attendee_password %>
<% end %>
