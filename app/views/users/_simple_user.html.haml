-# locals: user

- if can?(:show, user)
  .user-information.user-simple
    .logo-in-thread
      = link_logo_image(user, :size => '32', :url => user_path(user), :title => user.name, :class => "logo logo-user")
    .user-text
      = link_to user.full_name, user_path(user), :class => 'user-name'
      %span.user-organization= user.organization
