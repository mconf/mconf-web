        retval = retval.replace(/<p[\s\/]?>/gi, '');
        retval = retval.replace(/<\/p[\s\/]?>/gi, '');
        return retval;
    },
    submitdata : {authenticity_token: "<%=form_authenticity_token()%>"},
 });	 
 
<%end%>

