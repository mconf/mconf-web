- spaces_menu_at :events
= content_for :menu do
  = render :partial => 'spaces/menu'
- atom_link_header(space, Event.new, :title => "#{ t 'event.other' } - #{ space.name }")

= content_for :sidebar do
  - if !user_signed_in?
    #event_register.button_wrapper.margin-up
      = link_to t('register.and_participate'),signup_path("user[special_event_id]" => (@event.id).to_s) ,:class => "register_link big_button orange_button"
    %p.big_margin_down_40.note
      = t('register.and_participate_description_with_login', :url => login_path ).html_safe
  - elsif can?(:update, event)
    = content_for :event_actions do
      = render :partial => "actions"

  = content_for :event_phrase do
    - if event.is_happening_now?
      .content-block-middle.clearfix
        %p
          = t('event.note.not_organizer_during').html_safe
    - elsif event.past?
      .content-block-middle.clearfix
        %p
          = t('event.note.not_organizer_after', :date => @event.start_date.strftime("%d %b %Y")).html_safe
    - elsif  @event.start_date
      .content-block-middle.clearfix
        %p
          = t('event.note.not_organizer_before', :date => @event.start_date.strftime("%d %b %Y")).html_safe
    - else
      .content-block-middle.clearfix
        %p
          = t('event.note.not_organizer_no_date').html_safe

  = content_for :event_participation do
    - if params[:show_streaming] || params[:show_participation]
      = render :partial => 'participants'
    - else
      = render :partial => 'participants'

= render :partial => "event_card_show"