<%if request.xhr?%>
  <div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%= t('vcc') %></span></div>
<%else%>
  <h3 id="spam_no_lightbox"><%= t('report_spam') %></h3>
<%end%>

<%form_tag(spam_space_event_path(@space,@event)) do -%>
  <div id="spam_form">
	<p>
    <label for="subject"><%= t('subject') %>: </label><strong class="blue"><%= t('new_spam_detected') %></strong>
  </p>
	
	<p>
    <label for="body"><%= t('comment.other') %>:</label>
    <%= text_area_tag 'body', params[:body].present? ? params[:body] : nil,:id => "spam_textarea" %>
  </p>	
  <%= submit_tag t('report_spam') %>
	</div>
<% end -%>
