= render_page_title t('custom_bigbluebutton_rooms.invite.title', :name => @room.name)

#webconf-room-invite

  #webconf-room-device-type
    .invite-desktop{:class => params[:mobile] ? "" : "active"}
      .description
        - unless params[:mobile]
          .label.label-info.selected= t("custom_bigbluebutton_rooms.invite.selected")
        .text
          = t("custom_bigbluebutton_rooms.invite.desktop").html_safe
          = link_to t("custom_bigbluebutton_rooms.invite.click_to_select"), invite_bigbluebutton_room_path(@room)
    .invite-mobile{:class => params[:mobile] ? "active" : ""}
      .description
        - if params[:mobile]
          .label.label-info.selected= t("custom_bigbluebutton_rooms.invite.selected")
        .text
          = t("custom_bigbluebutton_rooms.invite.mobile").html_safe
          = link_to t("custom_bigbluebutton_rooms.invite.click_to_select"), invite_bigbluebutton_room_path(@room, :mobile => true)

  #webconf-room-join

    #webconf-room-status{:"data-url" => running_bigbluebutton_room_url(@room, :format => 'json')}
      = t("custom_bigbluebutton_rooms.invite.status")
      .label.tooltipped.upwards.status{:title => t("custom_bigbluebutton_rooms.invite.refresh")}
        = t('custom_bigbluebutton_rooms.invite.unknown')

    #webconf-room-type
      - if @room.private
        = t("custom_bigbluebutton_rooms.invite.room_type_private").html_safe
      - else
        = t("custom_bigbluebutton_rooms.invite.room_type_public").html_safe

    = simple_form_for :bigbluebutton_room, :url => join_bigbluebutton_room_path(@room, :mobile => params[:mobile]), :html => { :class => 'form-inline' } do |f|
      .input
        %label= t('rooms.invite.name')
        - if bigbluebutton_user.nil?
          = text_field_tag "user[name]", "", :autofocus => true
        - else
          = text_field_tag "user[name]", bigbluebutton_user.name, :size => 30, :readonly => true, :disabled => true
      - if @user_role == :password
        .input
          %label= t('rooms.invite.password')
          = password_field_tag "user[password]", "", :size => 30
      = f.button :submit, t("join"), :class => "btn"
