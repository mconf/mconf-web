#webconference-invitation

  .modal-header
    = modal_close_button
    %h3= t('.title')

  = simple_form_for :invite, :url => send_invitation_bigbluebutton_room_path(room), :html => { :class => 'single-column' } do |f|

    .modal-body
      .invitation-header
        %span= t('.meeting_in')
        %span.meeting-url= join_webconf_url(room)

      = f.input :users, :as => :string, :autofocus => true, :label => t('activerecord.attributes.invite.users')

      -# TODO: it would be good to have a custom simple_form input for dates
      .input.invitation-dates
        #invite_starts_on.input.input-append.date
          %label= t('activerecord.attributes.invite.starts_on')
          %input{ :'data-format' => t('_other.datetimepicker.format'), :type => "text", :name => 'invite[starts_on]' }
          %span.add-on
            %i{ :'data-time-icon' => "icon-time", :'data-date-icon' => "icon-calendar" }
        #invite_ends_on.input.input-append.date
          %label= t('activerecord.attributes.invite.ends_on')
          %input{ :'data-format' => t('_other.datetimepicker.format'), :type => "text", :name => 'invite[ends_on]' }
          %span.add-on
            %i{ :'data-time-icon' => "icon-time", :'data-date-icon' => "icon-calendar" }
        #invite_duration.input
          %span.duration= ''
        #invite_timezone
          = t(".timezone", :timezone => user_timezone)

      = f.input :title, :as => :string, :label => t('activerecord.attributes.invite.title')
      = f.input :message, :as => :text, :label => t('activerecord.attributes.invite.message')

    .modal-footer.form-actions
      = f.button :wrapped, t('_other.send'), :class => "btn btn-primary", :cancel_modal => true
