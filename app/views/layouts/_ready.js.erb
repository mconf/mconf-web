$(".check_mail_blinking:last input:mail").livequery("click", function(){
  if($(this).attr("checked")){
		$(".mail_group_blinking:last").show();
	}
	else{
	 $(".mail_group_blinking:last").hide();
	 $(".mail_group_blinking:last input:mailin_list").val("");	 
	}
	$("#fancy_outer").height($(".create_space_blinking:last").height() + 50);
	$(window).resize();
});




/*
 * Join space
 */

$("a.join_and_login_link").livequery("click", function(){
  var route = "/spaces/" + $(this).attr("name") +"/join_requests/new" 
  $.get(route,
        {authenticity_token: "<%=form_authenticity_token()%>"},
        function(data){
          $("#join_div").replaceWith(data);
					$("#fancy_outer").height($("#join_div").height() + 50);
					$(window).resize(); 
        }
      );
  return false;
});

