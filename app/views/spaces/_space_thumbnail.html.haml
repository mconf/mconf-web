-# locals:
-#  space (Space)

.list-thumbnail
  .list-logo
    - space_logo = logo_image(space, :size => "84x64", :title => space.name)
    -# note: can't be can?(:read, space) because we want the link even for non-members
    -#   of private spaces
    - if user_signed_in? || space.public
      = link_to space_path(space) do
        = space_logo
    - else
      = space_logo
  .list-description
    - if user_signed_in? || space.public
      = link_to first_words(space.name, 20), space_path(space), :title => space.name, :class => "list-title"
    - else
      %span{:title => space.name, :class => "list-title"}= first_words(space.name, 20)
    %span= t('_other.members', :count => space.users.count)
    - if space.public
      %span.visibility.public
        = icon_space_public()
        = t(".public")
    - else
      %span.visibility.private
        = icon_space_private()
        = t(".private")
